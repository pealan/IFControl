<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pealan.ifcontrol.activities.SalaActivity"
    android:orientation="vertical"
    android:weightSum="1">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="125dip"
                android:layout_height="125dip"
                android:id="@+id/btnLuz"
                app:cb_color="#4CAF50"
                app:cb_pressedRingWidth="8dip"></at.markushi.ui.CircleButton>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="125dip"
                android:layout_height="125dip"
                android:id="@+id/btnAr"
                app:cb_color="#4CAF50"
                app:cb_pressedRingWidth="8dip"></at.markushi.ui.CircleButton>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aumentar Temperatura do Ar:"
                android:id="@+id/textView"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="20°"
                android:id="@+id/txtTempAr"
                android:layout_gravity="center_horizontal"
                android:textColor="#727272" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skbTemperatura"
                android:max="5"
                android:indeterminate="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temperatura Atual:"
                android:id="@+id/textView3"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="25°"
                android:id="@+id/txtTemperatura"
                android:textSize="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#212121" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Umidade Atual:"
                android:id="@+id/textView9"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="44%"
                android:id="@+id/txtUmidade"
                android:textSize="40dp"
                android:layout_marginLeft="78dp"
                android:textColor="#212121" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Há pessoas na sala!"
            android:id="@+id/txtPresenca"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#212121" />

    </LinearLayout>
