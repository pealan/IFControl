<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pealan.ifcontrol.activities.HomeActivity"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:text="Seja bem vindo(a), LyviaSocoArmario!"
        android:layout_marginLeft="10dp"
        android:id="@+id/txtSaudacao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salas:"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView2" />


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:id="@+id/gridSalas">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sala1"
            android:layout_width="175dp"
            android:layout_height="175dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80CBC4">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgLuz1"
                        android:src="@drawable/ic_luz_on" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgAr1"
                        android:src="@drawable/ic_ar_on" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80CBC4">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgPresenca1"
                        android:src="@drawable/ic_pessoa_on" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sala 1"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textView10"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnSala1"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_settings_remote_black_24dp"
                            android:background="?android:selectableItemBackground" />

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnHorario1"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:src = "@drawable/ic_alarm_on_black_24dp"
                            android:background="?android:selectableItemBackground"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sala2"
            android:layout_width="175dp"
            android:layout_height="175dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2DFDB">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgLuz2"
                        android:src="@drawable/ic_alarm_on_black_24dp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgAr2"
                        android:src="@drawable/ic_settings_remote_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2DFDB">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgPresenca2"
                        android:src="@drawable/ic_alarm_off_black_24dp" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sala 2"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textView11"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnSala2"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_settings_remote_black_24dp"
                            android:background="?android:selectableItemBackground"/>

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnHorario2"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:src = "@drawable/ic_alarm_on_black_24dp"
                            android:background="?android:selectableItemBackground"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sala3"
            android:layout_width="175dp"
            android:layout_height="175dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A5D6A7">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgLuz3"
                        android:src="@drawable/ic_alarm_on_black_24dp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgAr3"
                        android:src="@drawable/ic_settings_remote_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A5D6A7">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imgPresenca3"
                        android:src="@drawable/ic_alarm_off_black_24dp" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sala 3"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textView12"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnSala3"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_settings_remote_black_24dp"
                            android:background="?android:selectableItemBackground"/>

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/btnHorario3"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:src = "@drawable/ic_alarm_on_black_24dp"
                            android:background="?android:selectableItemBackground"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>